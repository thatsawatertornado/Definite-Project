{
  "manifest_version": 3,
  "name": "Rehabilitation Centre",
  "version": "1.0",
  "description": "The Rehabilitation Centre should (keyword: should) absolve you of your current social media addiction.",
  "host_permissions": ["https://*.youtube.com/*"],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/rehab.png"
  },

  "background": {
    "service_worker": "scripts/bakground.js",
    "type": "module"
  },

  "permissions": [
    "storage", 
    "tabs",
    "windows",
    "activeTab"
  ]
}
